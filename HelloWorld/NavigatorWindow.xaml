<Window x:Class="HelloWorld.NavigatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="NavigatorWindow" Height="300" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="images/wpf-world.png" />
    </Window.Background>
    <StackPanel>
        <TextBox x:Name="uxURL" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" 
              VerticalAlignment="Top" Width="290" Text="Enter a URL address here" />
        <TextBlock>
            <Hyperlink x:Name="uxNavigator" NavigateUri="http://www.google.com" 
                  RequestNavigate="uxNavigator_RequestNavigate">Google.com</Hyperlink>
        </TextBlock>
        <Button x:Name="uxGoButton" Content="Go" Click="uxGoButton_Click"/>

    </StackPanel>
</Window>
